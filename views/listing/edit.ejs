<% layout ("layouts/boilerplate") %>

<body class="container mt-5">
    <h2 class="mb-4">Edit Your Listing</h2>
    <form method="POST" action="/listing/<%= listing._id %>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" class="form-control" id="title" name="listing[title]" value="<%= listing.title %>" required>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image URL</label>
            <input type="file" class="form-control" id="image" name="listing[image]"  >
        </div>
        <div class="mb-3">
            <label for="price" class="form-label">Price</label>
            <input type="number" class="form-control" id="price" name="listing[price]" value="<%= listing.price %>" required>
        </div>
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" id="location" name="listing[location]" value="<%= listing.location %>" required>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</body>

